<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/background_one"
                    android:layout_width="match_parent"
                    android:layout_marginTop="-150dp"
                    android:src="@mipmap/blue"
                    android:layout_height="wrap_content"
                    />


                <TextView
                    android:text="@string/create_note1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="80dp"
                    android:textColor="@android:color/white"
                    android:id="@+id/textView"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextHealthFacilityCreate"
                    android:layout_below="@+id/textView"
                    android:layout_marginTop="180dp"
                    android:hint="@string/health_facility"
                    android:textColorHint="@color/hintTextColor"
                    android:theme="@style/MyEditTextTheme"
                    android:layout_marginLeft="50dp"
                    android:ems="10"
                    android:layout_marginRight="50dp" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextStudentNameCreate"
                    android:hint="@string/student_s_first_and_last_name"
                    android:layout_below="@+id/editTextHealthFacilityCreate"
                    android:textColorHint="@color/hintTextColor"
                    android:layout_marginTop="18dp"
                    android:theme="@style/MyEditTextTheme"
                    android:layout_marginLeft="50dp"
                    android:ems="10"
                    android:layout_marginRight="50dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextAddressCreate"
                    android:layout_below="@+id/editTextStudentNameCreate"
                    android:layout_marginTop="18dp"
                    android:hint="@string/address"
                    android:textColorHint="@color/hintTextColor"
                    android:theme="@style/MyEditTextTheme"
                    android:layout_marginLeft="50dp"
                    android:ems="10"
                    android:layout_marginRight="50dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextAgeCreate"
                    android:layout_below="@+id/editTextAddressCreate"
                    android:layout_marginTop="18dp"
                    android:hint="@string/age"
                    android:theme="@style/MyEditTextTheme"
                    android:layout_marginLeft="50dp"
                    android:ems="10"
                    android:textColorHint="@color/hintTextColor"
                    android:layout_marginRight="50dp"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextNeedsCreate"
                    android:layout_below="@+id/editTextAgeCreate"
                    android:textColorHint="@color/hintTextColor"
                    android:layout_marginTop="18dp"
                    android:theme="@style/MyEditTextTheme"
                    android:layout_marginLeft="50dp"
                    android:ems="10"
                    android:hint="@string/needs"
                    android:layout_marginRight="50dp"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextServeCreateNote"
                    android:layout_below="@+id/editTextNeedsCreate"
                    android:layout_marginTop="18dp"
                    android:theme="@style/MyEditTextTheme"
                    android:layout_marginLeft="50dp"
                    android:ems="10"
                    android:hint="@string/serve_to"
                    android:textColorHint="@color/hintTextColor"
                    android:layout_marginRight="50dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextDoctorCreateNote"
                    android:layout_below="@+id/editTextServeCreateNote"
                    android:layout_marginTop="18dp"
                    android:textColorHint="@color/hintTextColor"
                    android:layout_marginLeft="50dp"
                    android:theme="@style/MyEditTextTheme"
                    android:ems="10"
                    android:hint="@string/doctor"
                    android:layout_marginRight="50dp"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextDataCreateNote"
                    android:layout_below="@+id/editTextDoctorCreateNote"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="50dp"
                    android:ems="10"
                    android:hint="@string/date"
                    android:textColorHint="@color/hintTextColor"
                    android:theme="@style/MyEditTextTheme"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="20dp" />

                <Button
                    android:text="@string/create"
                    android:background="#1C9FB5"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:textSize="18sp"
                    android:layout_below="@+id/editTextDataCreateNote"
                    android:layout_marginBottom="30dp" />
            </RelativeLayout>





        </ScrollView>
    </RelativeLayout>
</LinearLayout>