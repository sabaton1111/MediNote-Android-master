<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/linear_layout"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/background_one"
                        android:layout_width="match_parent"
                        android:layout_marginTop="-290dp"
                        android:layout_height="match_parent"
                        android:src="@mipmap/back_check1"/>

                    <ImageView

                        android:id="@+id/background_two"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@mipmap/white_back"/>
                    <TextView

                        android:text="Note details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewTextText"
                        android:textAlignment="center"
                        android:layout_marginTop="110dp"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_below="@+id/textViewTextText"
                        android:text="@string/health_facility"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="150dp"
                        android:id="@+id/textView" />

                    <TextView
                        android:text="TextView"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewHealthFacility"
                        android:layout_below="@+id/textView"
                        android:layout_marginTop="18dp"
                        android:layout_marginStart="50dp"
                        android:textSize="18sp"/>

                    <TextView
                        android:text="@string/name"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textViewHealthFacility"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:id="@+id/textView10" />
                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewName"
                        android:layout_below="@+id/textView10"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:layout_marginTop="18dp"
                        android:layout_marginStart="50dp"
                        android:textSize="18sp"/>

                    <TextView
                        android:text="@string/address"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textViewName"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:id="@+id/textView3" />
                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewAddress"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:layout_below="@+id/textView3"
                        android:layout_marginTop="18dp"
                        android:layout_marginStart="50dp"
                        android:textSize="18sp"/>

                    <TextView
                        android:text="@string/age"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_below="@+id/textViewAddress"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:id="@+id/textView4" />
                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewAge"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:layout_below="@+id/textView4"
                        android:layout_marginTop="18dp"
                        android:layout_marginStart="50dp"
                        android:textSize="18sp"/>

                    <TextView
                        android:textSize="20sp"
                        android:text="@string/needs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_below="@+id/textViewAge"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:id="@+id/textView5" />
                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewNeeds"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:layout_below="@+id/textView5"
                        android:layout_marginTop="18dp"
                        android:layout_marginStart="50dp"
                        android:textSize="18sp"/>

                    <TextView
                        android:textSize="20sp"
                        android:text="@string/serve_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_below="@+id/textViewNeeds"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:id="@+id/textView6" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewServe"
                        android:layout_below="@+id/textView6"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:layout_marginTop="18dp"
                        android:layout_marginStart="50dp"
                        android:textSize="18sp"/>

                    <TextView
                        android:text="@string/doctor"
                        android:textSize="20sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textViewServe"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:id="@+id/textView7" />
                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewDoctor"
                        android:layout_below="@+id/textView7"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:layout_marginTop="18dp"
                        android:layout_marginStart="50dp"

                        android:textSize="18sp"/>
                    <TextView
                        android:text="@string/date"
                        android:textSize="20sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textViewDoctor"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:id="@+id/textView169" />
                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewDate"
                        android:layout_below="@+id/textView169"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:layout_marginTop="18dp"
                        android:layout_marginStart="50dp"
                        android:layout_marginBottom="30dp"
                        android:textSize="18sp"/>
                </RelativeLayout>





        </ScrollView>
</LinearLayout>